{
  "comments": {
    "lineComment": ";"
  },
  "brackets": [
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" }
  ],
  "wordPattern": "[\\w$#@][\\w\\d$#@-]*",
  "indentationRules": {
    "increaseIndentPattern": "^.*\\((?![^)]*\\)).*$",
    "decreaseIndentPattern": "^\\s*\\).*$"
  }
}
