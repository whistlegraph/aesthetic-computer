# Tezos Environment Variables
# Copy this file to .env and fill in your values

# Environment Detection (auto-detected from CONTEXT or NODE_ENV)
# TEZOS_ENVIRONMENT=development  # development = ghostnet, production = mainnet

# Tezos Network Configuration
TEZOS_RPC_URL_GHOSTNET=https://ghostnet.ecadinfra.com
TEZOS_RPC_URL_MAINNET=https://mainnet.api.tez.ie

# Contract Addresses (set automatically by deployment scripts)
KIDLISP_CONTRACT_ADDRESS_GHOSTNET=
KIDLISP_CONTRACT_ADDRESS_MAINNET=

# Contract Deployment Keys
CONTRACT_ADMIN_SECRET_KEY_GHOSTNET=your_ghostnet_secret_key_here
CONTRACT_ADMIN_SECRET_KEY_MAINNET=your_mainnet_secret_key_here

# KidLisp Meme Coin Configuration
KIDLISP_COIN_NAME=KidLisp
KIDLISP_COIN_SYMBOL=KLSP
KIDLISP_COIN_DECIMALS=6

# Minting Configuration
DEFAULT_MINT_AMOUNT=1000000  # 1 token (with 6 decimals)
CREATOR_ROYALTY_PERCENTAGE=500  # 5% (in basis points)

# Integration with AC System
AC_MONGODB_CONNECTION_STRING=your_mongodb_connection_string
AC_MONGODB_NAME=your_database_name

# IPFS Configuration (optional)
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# Development
DEBUG=true
