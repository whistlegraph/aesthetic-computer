# MongoDB (primary - DO droplet via SSH tunnel, or localhost in production)
# Dev: ssh tunnel maps localhost:27018 â†’ droplet:27017
MONGODB_CONNECTION_STRING=mongodb://localhost:27018/aesthetic
MONGODB_NAME=aesthetic

# MongoDB Atlas (for comparison - always Atlas)
ATLAS_CONNECTION_STRING=mongodb+srv://user:pass@cluster.mongodb.net/?retryWrites=true&w=majority

# Redis (DigitalOcean Managed)
REDIS_CONNECTION_STRING=rediss://default:password@host:25061

# Server
PORT=3003
NODE_ENV=development

# DigitalOcean Spaces (S3-compatible) - for storage stats
SPACES_KEY=your_key_here
SPACES_SECRET=your_secret_here
SPACES_ENDPOINT=https://sfo3.digitaloceanspaces.com

# Bucket names to monitor
BUCKETS=art-aesthetic-computer,user-aesthetic-computer,wand-aesthetic-computer,assets-aesthetic-computer,at-blobs-aesthetic-computer

# Auth0
AUTH0_DOMAIN=aesthetic.us.auth0.com
AUTH0_CLIENT_ID=your_client_id_here
ADMIN_SUB=your_admin_sub_here

# Service health URLs
OVEN_URL=https://localhost:3002
SESSION_URL=https://localhost:8889
