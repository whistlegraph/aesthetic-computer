{
  "name": "aesthetic-computer",
  "version": "0.1.0",
  "description": "Aesthetic Computer - Creative coding platform",
  "main": "main.js",
  "scripts": {
    "start": "node -e \"require('child_process').spawn(require('path').join(__dirname, 'node_modules/electron/dist/Electron.app/Contents/MacOS/Electron'), ['.'], {stdio: 'inherit', cwd: __dirname})\"",
    "dev": "node -e \"require('child_process').spawn(require('path').join(__dirname, 'node_modules/electron/dist/Electron.app/Contents/MacOS/Electron'), ['.', '--dev'], {stdio: 'inherit', cwd: __dirname})\"",
    "electron": "./node_modules/electron/dist/Electron.app/Contents/MacOS/Electron",
    "icons": "node scripts/generate-icons.mjs",
    "native:build": "cd native/osr-gpu && npm install && npm run build || echo 'Native addon build skipped'",
    "native:rebuild": "electron-rebuild -f -w osr-gpu -o native/osr-gpu",
    "prebuild": "npm run icons && npm run native:build || echo 'Native addon build skipped'",
    "build": "electron-builder --mac --win --linux",
    "build:mac": "electron-builder --mac --universal",
    "build:win": "electron-builder --win --x64",
    "build:linux": "electron-builder --linux",
    "publish:mac": "electron-builder --mac --universal --publish always",
    "release": "electron-builder --mac --universal --publish always"
  },
  "build": {
    "appId": "computer.aesthetic.app",
    "productName": "Aesthetic Computer",
    "copyright": "Copyright Â© 2025 Aesthetic Computer",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "extraMetadata": {
      "name": "aesthetic-computer"
    },
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSDesktopFolderUsageDescription": "Aesthetic Computer needs access to your Desktop to manage the workspace.",
        "NSDocumentsFolderUsageDescription": "Aesthetic Computer needs access to Documents for file operations.",
        "NSDownloadsFolderUsageDescription": "Aesthetic Computer needs access to Downloads for file operations."
      }
    },
    "files": [
      "main.js",
      "preload.js",
      "offscreen-manager.js",
      "renderer/**/*",
      "native/osr-gpu/build/Release/*.node",
      "!node_modules/**/*",
      "node_modules/@xterm/**/*",
      "node_modules/node-pty/**/*",
      "node_modules/three/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Graphics"
    },
    "publish": {
      "provider": "github",
      "owner": "whistlegraph",
      "repo": "aesthetic-computer",
      "releaseType": "release"
    }
  },
  "keywords": [
    "creative-coding",
    "art",
    "graphics"
  ],
  "author": "Aesthetic Computer <hi@aesthetic.computer>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8",
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "@electron/rebuild": "^4.0.2",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0",
    "electron-updater": "^6.3.9",
    "node-pty": "^1.1.0",
    "three": "^0.182.0"
  }
}
