{
  "manifest_version": 3,
  "name": "Keeps Wallet",
  "version": "0.1.0",
  "description": "Tezos wallet for aesthetic.computer keeps (NFTs)",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Keeps Wallet"
  },

  "side_panel": {
    "default_path": "popup/popup.html"
  },
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://aesthetic.computer/*",
        "https://*.aesthetic.computer/*",
        "http://localhost:8888/*",
        "https://localhost:8888/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://api.tzkt.io/*",
    "https://api.ghostnet.tzkt.io/*",
    "https://mainnet.api.tez.ie/*",
    "https://ghostnet.teztnets.com/*"
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["inpage.js"],
      "matches": [
        "https://aesthetic.computer/*",
        "https://*.aesthetic.computer/*",
        "http://localhost:8888/*",
        "https://localhost:8888/*"
      ]
    }
  ]
}
